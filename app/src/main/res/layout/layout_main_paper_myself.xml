<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/mainPaper_collectionButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/paper_collection_icon"
        android:gravity="center"
        android:text="我的收藏"
        android:textColor="@color/black_text_24"
        android:textSize="16dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/paper_history_icon"
        android:gravity="center"
        android:text="练习历史"
        android:textColor="@color/black_text_24"
        android:textSize="16dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/mainPaper_eroorButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/paper_error_icon"
        android:gravity="center"
        android:text="我的错题"
        android:textColor="@color/black_text_24"
        android:textSize="16dp"
        android:visibility="invisible" />


    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />


</LinearLayout>