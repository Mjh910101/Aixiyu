<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="8dp">

    <ImageView
        android:id="@+id/videoHistory_videoPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/loding_icon" />

    <TextView
        android:id="@+id/videoHistory_titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/videoHistory_videoPic"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/videoHistory_videoPic"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="title"
        android:textColor="@color/black_text_24"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/videoHistory_lastTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/videoHistory_videoPic"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/videoHistory_videoPic"
        android:text="time"
        android:textColor="@color/gray_text_56"
        android:textSize="12dp" />

</RelativeLayout>