<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp">

    <ImageView
        android:id="@+id/rankingItem_rightIcon"
        android:layout_width="30dp"
        android:layout_height="66dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/black_next_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/rankingItem_rightIcon"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rankingItem_titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="title"
                android:textColor="@color/black_text_24"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/rankingItem_ordersText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gray_text_90"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/rankingItem_infoText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="非常厉害"
                android:textColor="@color/red_text_c7"
                android:textSize="13dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rankingItem_timeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="10:00"
                android:textColor="@color/gray_text_90"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/rankingItem_averageText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/orange_text_f9"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/rankingItem_uploadText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="time"
                android:textColor="@color/gray_text_90"
                android:textSize="12dp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/rankingItem_shareText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/rankingItem_rightIcon"
        android:background="@drawable/blue_blue_rounded_5"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:text="分享可见"
        android:textColor="@color/white" />
</RelativeLayout>