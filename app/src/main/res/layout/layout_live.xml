<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_f7"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/live_containerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/live_bannerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<include layout="@layout/layout_banner" />-->
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/live_toolContainerLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buts_container_height"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <RelativeLayout
                    android:id="@+id/live_hotButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/live_hotIconText"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/orange_whlit_rounded_5"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="热门"
                        android:textColor="@color/orange_text_f9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/live_hotText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/live_hotIconText"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom"
                        android:text="热门直播"
                        android:textColor="@color/orange_text_f9"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/live_bookButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/live_bookIconText"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/orange_whlit_rounded_5"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="预约"
                        android:textColor="@color/orange_text_f9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/live_bookText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/live_bookIconText"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom"
                        android:text="直播预约"
                        android:textColor="@color/orange_text_f9"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/live_playbackButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/live_playbackIconText"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/orange_whlit_rounded_5"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="回放"
                        android:textColor="@color/orange_text_f9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/live_playbackText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/live_playbackIconText"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom"
                        android:text="直播回放"
                        android:textColor="@color/orange_text_f9"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/live_oneToOneButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/live_oneToOneIconText"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/orange_whlit_rounded_5"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="1对1"
                        android:textColor="@color/orange_text_f9"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/live_oneToOneText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/live_oneToOneIconText"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom"
                        android:text="名师1对1"
                        android:textColor="@color/orange_text_f9"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/live_smallButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/live_smallIconText"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/orange_whlit_rounded_5"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="小班"
                        android:textColor="@color/orange_text_f9"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/live_smallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/live_smallIconText"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom"
                        android:text="小班课程"
                        android:textColor="@color/orange_text_f9"
                        android:textSize="15dp" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ling_gray" />

        </LinearLayout>

        <com.cn.ispanish.views.FloatListView
            android:id="@+id/live_listView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:divider="@color/ling_gray"
            android:dividerHeight="1px"
            android:paddingBottom="50dp" />
    </LinearLayout>

    <include layout="@layout/view_progress" />

</RelativeLayout>