<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_f7"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playOrder_confirm_titleText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="12dp"
                android:text=""
                android:textColor="@color/black_text_24"
                android:textSize="17dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/ling_gray" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="支付金额"
                    android:textColor="@color/black_text_24"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/playOrder_confirm_topUpManey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="￥500.00"
                    android:textColor="@color/red_text_c7"
                    android:textSize="17dp" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/ling_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="请选择支付方式"
                android:textColor="@color/black_text_24"
                android:textSize="15dp" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/ling_gray" />

            <RelativeLayout
                android:id="@+id/playOrder_confirm_zhifubaoLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/playOrder_confirm_zhifubaoIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/zhifubao" />

                <TextView
                    android:id="@+id/playOrder_confirm_zhifubaoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/playOrder_confirm_zhifubaoIcon"
                    android:text="支付宝"
                    android:textColor="@color/black_text_24"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/playOrder_confirm_zhifubaoText"
                    android:layout_toRightOf="@id/playOrder_confirm_zhifubaoIcon"
                    android:text="建议支付宝用户使用"
                    android:textColor="@color/gray_text_90"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/playOrder_confirm_zhifubaoRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/pay_sype"
                    android:clickable="false" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/ling_gray" />

            <RelativeLayout
                android:id="@+id/playOrder_confirm_weixinLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/playOrder_confirm_weixinIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/weixin" />

                <TextView
                    android:id="@+id/playOrder_confirm_weixinText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/playOrder_confirm_weixinIcon"
                    android:text="微信支付"
                    android:textColor="@color/black_text_24"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/playOrder_confirm_weixinText"
                    android:layout_toRightOf="@id/playOrder_confirm_weixinIcon"
                    android:text="建议微信用户使用"
                    android:textColor="@color/gray_text_90"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/playOrder_confirm_weixinRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/pay_sype"
                    android:clickable="false" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/ling_gray" />

        </LinearLayout>

        <TextView
            android:id="@+id/playOrder_confirm_topUpBtm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/bleu_36"
            android:gravity="center"
            android:padding="10dp"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <include layout="@layout/view_progress" />

    </RelativeLayout>

</LinearLayout>