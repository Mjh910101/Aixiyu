<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_f7"
    android:orientation="vertical">

    <com.cn.ispanish.views.MaxHeightLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:mhv_HeightRatio="0.4">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.cn.ispanish.views.paper.v2.views.PaperTypeView
                    android:id="@+id/paperListenSpoken_typeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.cn.ispanish.views.paper.v2.views.PaperAudioView
                    android:id="@+id/paperListenSpoken_audioView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.cn.ispanish.views.paper.v2.views.PaperTitleView
                    android:id="@+id/paperListenSpoken_titleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </ScrollView>
    </com.cn.ispanish.views.MaxHeightLayout>

    <include layout="@layout/view_line" />

    <com.cn.ispanish.views.paper.v2.views.PaperSpokenView
        android:id="@+id/paperListenSpoken_spokenView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />


</LinearLayout>