<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/paperList_item_picLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/paperList_item_picView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loding_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/paperList_item_picLayout"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/paperList_item_picLayout"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/paperList_item_picLayout">

        <TextView
            android:id="@+id/paperList_item_titleTetx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="title"
            android:textColor="@color/black_text_24"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/paperList_item_infoTetx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paperList_item_titleTetx"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="info"
            android:textColor="@color/gray_text_90"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paperList_item_discountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥100"
                android:textColor="@color/orange_text_f9"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/paperList_item_priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="￥100"
                android:textColor="@color/gray_text_56"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/paperList_item_sumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="sum"
                android:gravity="right"
                android:textColor="@color/black_text_24"
                android:textSize="13dp" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>