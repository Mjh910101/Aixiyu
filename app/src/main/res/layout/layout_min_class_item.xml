<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp">

        <ImageView
            android:id="@+id/minClass_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/minClass_moneyLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/minClass_priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠价"
                android:textColor="@color/orange_text_f9"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/minClass_originalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原价"
                android:textColor="@color/gray_text_66"
                android:textSize="13dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/minClass_pic"
            android:layout_alignTop="@id/minClass_pic"
            android:layout_toLeftOf="@id/minClass_moneyLayout"
            android:layout_toRightOf="@id/minClass_pic"
            android:background="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/minClass_titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@color/black_text_24"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/minClass_infoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/minClass_titleText"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@color/gray_text_90"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/minClass_teacherText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/minClass_infoText"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray_text_90"
                android:textSize="13dp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>