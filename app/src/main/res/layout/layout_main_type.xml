<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/main_indexButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_indexIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/home_on_icon" />

            <TextView
                android:id="@+id/main_indexText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主页"
                android:textColor="@color/black_text_24"
                android:textSize="13dp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_paperButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_paperIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/paper_off_icon" />

            <TextView
                android:id="@+id/main_paperText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="题库"
                android:textColor="@color/black_text_24"
                android:textSize="13dp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_myselfButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_myselfIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/user_off_icon" />

            <TextView
                android:id="@+id/main_myselfText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="@color/black_text_24"
                android:textSize="13dp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_offlineButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_offLineIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/offline_off_icon" />


            <TextView
                android:id="@+id/main_offlineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="离线"
                android:textColor="@color/black_text_24"
                android:textSize="13dp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>