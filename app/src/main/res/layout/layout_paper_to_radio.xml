<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cn.ispanish.views.MaxHeightLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:mhv_HeightRatio="0.4">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg_f7"
            android:scrollbars="none">

            <com.cn.ispanish.views.MaxHeightLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.cn.ispanish.views.paper.v2.views.PaperTypeView
                    android:id="@+id/paperRadio_typeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.cn.ispanish.views.paper.v2.views.PaperTitleView
                    android:id="@+id/paperRadio_titleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.cn.ispanish.views.MaxHeightLayout>

        </ScrollView>
    </com.cn.ispanish.views.MaxHeightLayout>

    <include layout="@layout/view_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.cn.ispanish.views.paper.v2.views.PaperRadioView
                android:id="@+id/paperRadio_radioView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.cn.ispanish.views.paper.v2.views.PaperInputView
                android:id="@+id/paperRadio_inputView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.cn.ispanish.views.paper.v2.views.PaperExplainView
                android:id="@+id/paperRadio_explainView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
