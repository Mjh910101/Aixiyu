<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/paperJudge_scrollView"
    android:background="@color/gray_bg_f7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/paperJudge_questionTypeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paperJudge_questionTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_transparent_rounded_5"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="type"
                android:textColor="@color/bleu_text_36"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/paperJudge_questionNumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="1"
                android:textColor="@color/bleu_text_36"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/paperJudge_questionTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/black_text_24"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/paperJudge_questionPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/paperJudge_trueButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/paperJudge_trueIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/single_init_icon" />

            <TextView
                android:id="@+id/paperJudge_trueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/paperJudge_trueIcon"
                android:text="正确"
                android:textColor="@color/gray_text_66"
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/paperJudge_flseButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/paperJudge_flseIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/single_init_icon" />

            <TextView
                android:id="@+id/paperJudge_flseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/paperJudge_flseIcon"
                android:text="错误"
                android:textColor="@color/gray_text_66"
                android:textSize="16dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/paperJudge_questionExplainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_centerVertical="true"
                    android:background="@color/ling_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/gray_bg_f7"
                    android:padding="8dp"
                    android:text="试题解析"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <TextView
                android:id="@+id/paperJudge_questionExplainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explain"
                android:textColor="@color/gray_text_56"
                android:textSize="17dp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>