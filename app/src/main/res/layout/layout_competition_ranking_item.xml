<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/competitionRanking_medalIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:scaleType="fitStart"
        android:src="@drawable/gold_medal_icon" />

    <TextView
        android:id="@+id/competitionRanking_medalText"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black_text_24"
        android:textSize="22dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/competitionRanking_userIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/competitionRanking_medalIcon"
        android:scaleType="fitStart"
        android:src="@drawable/user_off_icon" />

    <RelativeLayout
        android:id="@+id/competitionRanking_shareLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/competitionRanking_resultsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0分0秒"
            android:textColor="@color/orange_text_f9"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/competitionRanking_shareText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/orange_whlit_rounded_5"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="等待公布"
            android:textColor="@color/orange_text_f9"
            android:textSize="17dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/competitionRanking_lickIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/competitionRanking_shareLayout"
        android:src="@drawable/luck_icon"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/competitionRanking_lickIcon"
        android:layout_toRightOf="@id/competitionRanking_userIcon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/competitionRanking_userNameText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="name"
            android:textColor="@color/gray_text_56"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/competitionRanking_timeText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="0分"
            android:textColor="@color/gray_text_56"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>