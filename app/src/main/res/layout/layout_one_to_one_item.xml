<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp">

        <ImageView
            android:id="@+id/one2One_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/one2One_pic"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/one2One_pic"
            android:layout_toRightOf="@id/one2One_pic"
            android:background="@color/white"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/one2One_titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@color/black_text_24"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/one2One_infoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/one2One_titleText"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@color/gray_text_90"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/one2One_teacherText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/one2One_infoText"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray_text_90"
                android:textSize="13dp" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ling_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/orange_orange_rounded_5"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:text="获取试听名额"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </RelativeLayout>

</LinearLayout>