<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_bg_f7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black_bg_f7"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/liveRoomContent_dataButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/liveRoomContent_dataText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="课程简介"
                android:textColor="@color/gray_text_56"
                android:textSize="16dp" />

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/ling_gray" />

        <RelativeLayout
            android:id="@+id/liveRoomContent_imButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/liveRoomContent_imText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="聊天室"
                android:textColor="@color/gray_text_56"
                android:textSize="16dp" />


        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/ling_gray" />

        <RelativeLayout
            android:id="@+id/liveRoomContent_oldButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/liveRoomContent_oldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="往期回顾"
                android:textColor="@color/gray_text_56"
                android:textSize="16dp" />


        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ling_gray" />

    <FrameLayout
        android:id="@+id/liveRoomContent_contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_bg_f7" />

</LinearLayout>