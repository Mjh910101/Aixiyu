<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/liveGift_titleText"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="赠送主播礼物，为主播打气加油！"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <RelativeLayout
        android:id="@+id/liveGift_buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/liveGift_sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/gray_gray_rounded_5"
            android:clickable="false"
            android:padding="5dp"
            android:text="赠送"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/liveGift_sumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/liveGift_sendButton"
            android:text="数量："
            android:textColor="@color/gray_text_66"
            android:textSize="13dp" />


    </RelativeLayout>

    <GridView
        android:id="@+id/liveGift_dataList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/liveGift_buttonLayout"
        android:layout_below="@id/liveGift_titleText"
        android:numColumns="3" />


</RelativeLayout>