<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色（蓝色）  -->
    <item  android:id="@android:id/background" >
        <shape>
            <corners android:radius="6dp" />
            <gradient android:startColor="@color/gray_text_90"
                android:endColor="@color/gray_text_90" />
        </shape>
    </item>

    <!--  设置进度条颜色（红色）  -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="6dp" />
                <gradient  android:startColor="@color/red_bg"
                    android:endColor="@color/red_bg" />
            </shape>
        </clip>
    </item>

</layer-list>